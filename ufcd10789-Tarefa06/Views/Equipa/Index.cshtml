@model IEnumerable<ufcd10789_Tarefa06.Models.Equipa>

@{
    ViewData["Title"] = "Equipas";
    ViewBag.ContentCssClass = "equipa-index";
}

<div class="container">
    <h1>
        <i class="fa fa-list"></i>
        Equipas
    </h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-primary">
            <i class="fa fa-circle-plus"></i> Nova Equipa
        </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Pontos</th>
                <th>Jogos</th>
                <th>Cidade</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.list) {
            <tr>
                <td>@item.Name</td>
                <td>@item.Pontos</td>
                <td>@item.Jogos</td>
                <td>@item.Cidade</td>
                <td>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                        <i class="fa-solid fa-circle-info"></i> Detalhes
                    </a>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="fa fa-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="fa fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
