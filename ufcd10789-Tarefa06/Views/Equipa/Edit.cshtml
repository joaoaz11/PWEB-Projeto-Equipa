@model ufcd10789_Tarefa06.Models.Equipa

@{
    ViewData["Title"] = "Editar Equipa";
    ViewBag.ContentCssClass = "equipa-edit";
}

<div class="container">
    <h1>
        <i class="fa fa-pencil"></i>
        Editar Equipa
    </h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" value="@ViewBag.Equipa.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pontos" class="control-label">Pontos</label>
                    <input asp-for="Pontos" class="form-control" value="@ViewBag.Equipa.Pontos" />
                    <span asp-validation-for="Pontos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Jogos" class="control-label">Jogos</label>
                    <input asp-for="Jogos" class="form-control" value="@ViewBag.Equipa.Jogos" />
                    <span asp-validation-for="Jogos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cidade" class="control-label">Cidade</label>
                    <input asp-for="Cidade" class="form-control" value="@ViewBag.Equipa.Cidade" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-floppy-disk"></i> Guardar
					</button>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa fa-list"></i> Volta à lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
