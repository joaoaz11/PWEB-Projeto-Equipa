@model ufcd10789_Tarefa06.Models.Equipa

@{
    ViewData["Title"] = "Detalhes da Equipa";
    ViewBag.ContentCssClass = "equipa-details";
}

<div class="container">
    <h1>
        <i class="fa fa-memo-circle-info"></i>
        Detalhes da Equipa
    </h1>

    <div>
        <dl class="row">
            <dt class = "col-sm-2">Nome</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Name
            </dd>
            <dt class = "col-sm-2">Pontos</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Pontos
            </dd>
            <dt class = "col-sm-2">Jogos</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Jogos
            </dd>
            <dt class = "col-sm-2">Cidade</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Cidade
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@ViewBag.Equipa?.Id" class="btn btn-outline-success">
            <i class="fa fa-pencil"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@ViewBag.Equipa?.Id" class="btn btn-outline-danger">
            <i class="fa fa-trash"></i> Apagar
        </a>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fa fa-list"></i> Volta à lista
        </a>
    </div>
</div>
