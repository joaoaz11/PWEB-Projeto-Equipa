@model ufcd10789_Tarefa06.Models.Equipa

@{
    ViewData["Title"] = "Apagar Equipa";
    ViewBag.ContentCssClass = "equipa-delete";
}

<div class="container">
    <h1>
        <i class="fa fa-trash"></i>
        Apagar Equipa
    </h1>

	<h3>Tem certeza de que deseja excluir esta Equipa?</h3>
    <div>
        <dl class="row">
            <dt class = "col-sm-2">Nome</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Name
            </dd>
            <dt class = "col-sm-2">Pontos</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Pontos
            </dd>
            <dt class = "col-sm-2">Jogos</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Jogos
            </dd>
            <dt class = "col-sm-2">Cidade</dt>
            <dd class = "col-sm-10">
                @ViewBag.Equipa.Cidade
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash"></i> Sim, Apagar!
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i> Volta à lista
            </a>
        </form>
    </div>
</div>
